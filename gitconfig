[include]
        path = ~/.gitconfig.local

[hub]
        protocol = https

[alias]
        co = checkout
        clear = !git branch | grep -v "master" | grep -v "main" | xargs git branch -D

[color]
        diff = auto
        status = auto
        branch = auto
        ui = true

[core]
        excludesfile = ~/.gitignore
        editor = nvim

[push]
        default = simple
        recurseSubmodules = check

[pull]
        ff = only

[init]
        defaultBranch = main

[status]
        submodulesummary = 1
