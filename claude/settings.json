{
  "hooks": {
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "node ~/.claude/hooks/scripts/notify.js"
          }
        ]
      }
    ],
    "PermissionRequest": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "node ~/.claude/hooks/scripts/notify.js"
          }
        ]
      }
    ]
  },
  "env": {
    "BASH_DEFAULT_TIMEOUT_MS": "1800000",
    "BASH_MAX_TIMEOUT_MS": "7200000"
  },
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Bash(docker ps:*)",
      "Bash(docker logs:*)",
      "Bash(docker inspect:*)",
      "Bash(docker start:*)",
      "Bash(docker stop:*)",
      "Bash(docker restart:*)",
      "Bash(docker rm:*)",
      "Bash(docker exec:*)",
      "Bash(docker volume:*)",
      "Bash(docker images:*)",
      "Bash(docker pull:*)",
      "Bash(docker build:*)",
      "Bash(docker compose:*)",
      "Bash(kubectl:*)",
      "Bash(helm:*)",
      "Bash(minikube:*)",
      "Bash(kind:*)",
      "Bash(git status:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(git pull:*)",
      "Bash(git fetch:*)",
      "Bash(git log:*)",
      "Bash(git diff:*)",
      "Bash(git checkout:*)",
      "Bash(git branch:*)",
      "Bash(git merge:*)",
      "Bash(git rebase:*)",
      "Bash(git stash:*)",
      "Bash(git remote:*)",
      "Bash(git config:*)",
      "Bash(git reset:*)",
      "Bash(git tag:*)",
      "Bash(git show:*)",
      "Bash(git clone:*)",
      "Bash(ls:*)",
      "Bash(cat:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(grep:*)",
      "Bash(awk:*)",
      "Bash(find:*)",
      "Bash(sort:*)",
      "Bash(cp:*)",
      "Bash(mv:*)",
      "Bash(mkdir:*)",
      "Bash(touch:*)",
      "Bash(pwd:*)",
      "Bash(cd:*)",
      "Bash(npm:*)",
      "Bash(npx:*)",
      "Bash(node:*)",
      "Bash(pnpm:*)",
      "Bash(yarn:*)",
      "Bash(bun:*)",
      "Bash(python:*)",
      "Bash(pip:*)",
      "Bash(uv:*)",
      "Bash(cargo:*)",
      "Bash(go:*)",
      "Bash(jq:*)",
      "Bash(yq:*)",
      "Bash(curl:*)",
      "Bash(ps:*)",
      "Bash(jobs:*)",
      "Bash(date:*)",
      "Bash(whoami:*)",
      "Bash(which:*)",
      "Bash(env:*)",
      "Bash(printenv:*)",
      "Bash(gh:*)",
      "Bash(make:*)",
      "Bash(tar:*)",
      "Bash(gzip:*)",
      "Bash(zip:*)",
      "Bash(unzip:*)",
      "Read(**)",
      "Edit(**)",
      "Write(**)",
      "Glob(**)",
      "Grep(**)",
      "WebFetch(domain:*)",
      "WebSearch",
      "TodoWrite(**)",
      "Task(**)",
      "mcp__context7__resolve-library-id",
      "mcp__context7__get-library-docs"
    ],
    "deny": [
      "Bash(rm -rf /*)",
      "Bash(sudo rm -rf /*)",
      "Bash(dd if=:*)",
      "Bash(mkfs:*)",
      "Bash(fdisk:*)",
      "Bash(sudo passwd:*)",
      "Bash(passwd:*)",
      "Bash(sudo useradd:*)",
      "Bash(sudo userdel:*)",
      "Bash(git push --force origin master:*)",
      "Bash(git push --force origin main:*)",
      "Bash(git push -f origin master:*)",
      "Bash(git push -f origin main:*)",
      "Bash(shutdown:*)",
      "Bash(reboot:*)",
      "Bash(halt:*)",
      "Bash(chmod -R 777 /*)"
    ],
    "defaultMode": "plan"
  },
  "enabledPlugins": {
    "pr-review-toolkit@claude-code-plugins": true,
    "feature-dev@claude-code-plugins": true,
    "security-guidance@claude-code-plugins": true,
    "fullstack-dev@core-workflows": true,
    "document-skills@anthropic-agent-skills": true
  },
  "alwaysThinkingEnabled": true
}
